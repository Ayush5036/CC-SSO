<%- include('partials/header') -%>

<div class="flex justify-center items-center min-h-screen">
  <div class="text-center">
    <h1 class="text-4xl font-bold mb-6">Welcome To Plan Manager</h1>

    <% if (locals.isAuthenticated) { %>
      <p class="text-lg mb-6">You are logged in.</p>
      <a href="/profile" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">View Your Profile</a>
    <% } else { %>
      <p class="text-lg mb-6">You are not logged in.</p>
      <a href="/login" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Login</a>
    <% } %>
  </div>
</div>

<%- include('partials/footer') -%>
